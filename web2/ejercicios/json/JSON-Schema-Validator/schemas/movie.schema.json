{
    "$schema": "https://json-schema.org/draft/2020-12/schema#",
    "type": "object",
    "title": "Movie",
    "description": "Movie info",
    "additionalProperties": true,
    "required": [
        "nombrePelicula",
        "estreno",
        "generos",
        "duracion",
        "clasificacion",
        "director"
    ],
    "properties": {
        "nombrePelicula": {
            "type": "string"
        },
        "estreno": {
            "type": "integer"
        },
        "generos": {
            "type": "array",
            "minItems": 1
        },
        "duracion": {
            "type": "string"
        },
        "clasificacion": {
            "type": "string"
        },
        "director": {
            "type": "string"
        }
    }
}